{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
    {% set filter = app.session.get('filter') %}

    <div class="jg_box_login">
        <h2>Login</h2>
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <input type="text" id="_username" name="_username" value="{{ last_username }}" placeholder="introduce tú usuario">
            </div>
            <div class="form-group">
                <input type="password" id="_password" name="_password" placeholder="introduce tú contraseña">
            </div>
            <button type="submit">Login</button>
        </form>
    </div>

{% endblock %}