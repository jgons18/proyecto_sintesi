{% extends 'base.html.twig' %}

{% block body %}

    <h2>Frutas</h2>
    {#{% if app.user %}#}
    <div class="am_filtros"><p>
            <div class="am_filtros_precio"><p>ordear por precio:</p><a id="am_filtro_bajo_alto" href="{{ path('app_price_low_to_high_f') }}">bajo a alto</a><a id="am_filtro_alto_bajo" href="{{ path('app_price_high_to_low_f') }}">alto a bajo</a></div>
    <div class="am_filtros_categoria"><p>ordenar por categoria:</p><p><a href="{{ path('app_category_filter_banana') }}">Platanos</a><a href="{{ path('app_category_filter_apple') }}">Manzanas</a></p></div>

    <p>HOLAAAA</p>
    </div>
    <p class="am_añadirproducto_fruta"><a href="{{ path('new_product_fruit') }}">+ Añadir nuevo producto</a></p>
    {#    {% endif %}#}
    {% for re in res %}
        <div>
            {%  if re.isfruit == 1 %}
                <div>
                    <h3>{{ re.nameproduct }}</h3>
                    <p>{{ re.description }}<br>
                        {{ re.unitprice }}<br>
                        {{ re.stock }}<br>
                        {{ re.reservedstocks }}<br>
                        {{ re.season }}<br>
                        {{ re.category }}<br>
                        <img width="30px" src="{{ asset('uploads/pictures/' ~ re.image) }}">

                    </p>
                    <a href="{{ path('add_product_to_basket',{'id':re.id}) }}">añadir al carrito</a>
                    <a href="{{ path('view_product_fruit', {'id':re.id}) }}">Ver producto</a>
                    <a href="{{ path('edit_product_fruit', {'id':re.id}) }}">Editar</a>
                    <a href="{{ path('delete_product_fruit', {'id':re.id}) }}" onclick="return confirm('¿Estás seguro?')">Eliminar</a>
                </div>
            {% endif %}
        </div>
    {% endfor %}

{% endblock %}