{% extends 'base.html.twig' %}

{% block body %}

    <h2>Frutas</h2>
{#{% if app.user %}#}
        <p><a href="{{ path('new_product_fruit') }}">+ Añadir nuevo producto</a></p>
        <p><a href="{{ path('app_price_low_to_high_f') }}">Precio:bajo a alto</a></p>
        <p><a href="{{ path('app_price_high_to_low_f') }}">Precio:alto a bajo</a></p>
        <p><a href="{{ path('app_category_filter_banana') }}">Platanos</a>&nbsp;<a href="{{ path('app_category_filter_apple') }}">Manzanas</a> </p>
    {#    {% endif %}#}
    {% for product in products %}
        <div>
            {%  if product.isfruit == 1 and product.category != 'Caja' %}
            <div>
                <h3>{{ product.nameproduct }}</h3>
                <p>{{ product.description }}<br>
                {{ product.unitprice }}<br>
                {{ product.stock }}<br>
                {{ product.reservedstocks }}<br>
                {{ product.season }}<br>
                {{ product.category }}<br>
                    <img width="30px" src="{{ asset('uploads/pictures/' ~ product.image) }}">

                </p>
                <a href="{{ path('add_product_to_basket',{'id':product.id}) }}">añadir al carrito</a>
                <a href="{{ path('view_product_fruit', {'id':product.id}) }}">Ver producto</a>
                <a href="{{ path('edit_product_fruit', {'id':product.id}) }}">Editar</a>
                <a href="{{ path('delete_product_fruit', {'id':product.id}) }}" onclick="return confirm('¿Estás seguro?')">Eliminar</a>
            </div>
            {% endif %}
        </div>
    {% endfor %}

{% endblock %}

