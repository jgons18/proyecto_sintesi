{% extends 'base.html.twig' %}

{% block body %}
    <div>
            <div class="am_vista">
                <h3 class="am_ruta">Ruta</h3>
                <div class="am_iconos"><a class="fas fa-pen" href="{{ path('edit_product_fruit', {'id':product.id}) }}"></a> <a class="fas fa-trash-alt" href="{{ path('delete_product_fruit', {'id':product.id}) }}" onclick="return confirm('¿Estás seguro?')"></a></div>

                <div class="detalles">
                    <div class="am_imagen"><img width="30px" src="{{ asset('uploads/pictures/' ~ product.image) }}"></div>
                    <h3 class="am_nameproduct">{{ product.nameproduct }}</h3>
                    <div class="am_categoria">{{ product.category }}</div>
                    <div class="am_temporada">{{ product.season }}</div>
                    <div class="am_precio">{{ product.unitprice }}€</div>
                    <div class="am_descripcion">{{ product.description }}</div>
                </div>
            </div>
    </div>
{% endblock %}
